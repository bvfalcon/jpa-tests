<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="com.baeldung.inheritance.mariadb">
        <description>JPA Inheritance types comparison</description>
        <class>com.baeldung.hibernate.pojo.inheritance.Animal</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Book</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Car</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Employee</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Product</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Person</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Pet</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Vehicle</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/inheritance"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="test"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDB103Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="com.baeldung.inheritance.postgres">
        <description>JPA Inheritance types comparison</description>
        <class>com.baeldung.hibernate.pojo.inheritance.Animal</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Book</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Car</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Employee</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Product</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Person</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Pet</class>
        <class>com.baeldung.hibernate.pojo.inheritance.Vehicle</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://127.0.0.1:5432/inheritance"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="test"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence> 